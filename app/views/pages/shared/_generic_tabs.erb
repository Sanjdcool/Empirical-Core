<div class="q-nav-bar">
  <ul class='desktop-nav-list'>
    <%  @tabs.each do |tab| -%>
      <li class=<%= tab[:name] == @active_tab ? 'active' : nil%> >
        <%= link_to tab[:name], root_url + tab[:url] %>
      </li>
    <%end-%>

  </ul>


  <!--  Mobile Version from: https://css-tricks.com/responsive-menu-concepts/#article-header-id-9 -->
  <nav role="custom-dropdown">
      <input type="checkbox" id="button">
      <label for="button" onclick></label>

      <ul>
        <%  @tabs.each do |tab| -%>
          <li >
            <%= link_to tab[:name], root_url + tab[:url] %>
          </li>
        <%end-%>
      </ul>
  </nav>

</div>
