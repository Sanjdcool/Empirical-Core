<div class="container">
  <article class="simple-rounded-box">
    <h2>New Criterion for <%= @recommendation.name.titleize %> Recommendation</h2>
    <hr/>
    <div class="cms-form">
      <%= form_for [:cms, @activity_classification, @activity, @recommendation, @criterion ] do |f| %>
        <%= f.label :concept_id, 'Concept' %>
        <%= f.collection_select :concept_id,
          Concept.all,
          :id,
          :name
        %>
        <%= f.label :category %>
        <%= f.collection_select :category,
          Criterion.categories.map { |type| [type.first, type.first.titleize] },
          :first,
          :second
        %>
        <%= f.label :count %>
        <%= f.number_field :count, { min: 0, max: 100 } %>
        <%= f.submit %>
      <% end %>
    </div>
  </article>
</div>
