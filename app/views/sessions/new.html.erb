<div class="container account-form">
  <div class="sign-in-header text-center">
  <h3>Welcome Back to Quill</h3>
    <div class="text-center">
      <a href='/auth/google_oauth2' className='google-sign-in''><img src='/images/login_with_google.png'></a>
      <%= link_to image_tag('/images/login_with_clever.png'),
        ("https://clever.com/oauth/authorize?#{ {response_type: 'code', redirect_uri: Clever::REDIRECT_URL, client_id: Clever::CLIENT_ID, scope: QuillClever.scope}.to_param }")
      %>
      <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <br /><br />
          <% if flash[:error] %>
            <div class="error"><%= flash[:error] %></div>
          <% end %>
          <%= form_for @user, url: session_path(redirect: params[:redirect]) do |f| %>
            <%= f.label :email_or_username, placeholder: 'Email or Username' %>
            <%= f.text_field :email, placeholder: 'Email or Username' %>
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: 'Password', class: 'Password' %>
            <%= f.submit 'Login' %>
          <% end %>
                    <br /><br />
          <%= link_to 'Forgot your password?', password_reset_index_path, class: 'newline' %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag('cookie_warning.js') %>
