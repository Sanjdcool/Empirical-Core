<div class='container'>
  <article class='simple-rounded-box cms-container'>
    <div class="cms-gallery">
      <% @images.each do |i|%>
        <div class="gallery-item">
          <p><span>Link:</span> <a href="<%= i.file.url %>"><%= i.file.url %></a></p>
          <a href="<%= i.file.url %>"><img src="<%= i.file.url %>"></img></a>
          <%= link_to "/cms/images/#{i.id}", method: 'delete', class: 'trash-link' do %>
            <i class="fa fa-icon fa-trash"></i>
          <% end %>
          </span>
        </div>
      <% end %>
    </div>
  </article>
</div>
