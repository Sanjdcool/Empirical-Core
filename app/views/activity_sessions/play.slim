javascript:
  window.addEventListener("message", receiveMessage, false);

  function receiveMessage(event)
  {
    if (event.origin === "http://localhost:3001") {
      window.location.reload();
    } else if (event.origin === "https://grammar.quill.org"){
      window.location.reload();
    } else {
      return
    }
  }