<!-- ==========================================================================
     Icons legend
  ========================================================================== -->

<%= render partial: 'classroom_selector_and_legend' %>

<% @score_table.each do |student| %>
  <div class="container">

    <section>

      <h3 class="student-name"><%= student[:name] %></h3>

      <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">

          <% student[:activities].in_groups_of(10) do |activities| %>

            <div class="icon-row">

              <% activities.each do |activity| %>
                <% next unless activity %>
                <div class="icon-wrapper icon-<%= percentage_color(activity[:score]) %> icon-pencil" ></div>
              <% end %>

            </div>

          <% end %>

        </div> <!-- //.col-xs-12 -->

      </div> <!-- //.row -->

    </section>

  </div> <!-- //.container -->
<% end %>
