

<%= render partial: 'teachers/shared/scorebook_tabs' %>



<div id="page-content-wrapper">

		<div class="tab-pane" id="activity-planner">


		<div class="tab-subnavigation-wrapper">

			<div class="container">

				<ul>
					<li><a href="" class="active">Create a Unit</a></li>
					<li><a href="">Explore Units</a></li>
					<li><a href="">Create a New Activity</a></li>
				</ul>

			</div> <!-- //.container -->
						
		</div>
	  	
			
		<!-- ==========================================================================
			 Progress tracker
			========================================================================== -->	

		<div class="container">
			<section class="section-content-wrapper">

				<div class="bs-wizard">

	                <div class="select_activities_progress_bar col-xs-3 bs-wizard-step complete"><!-- complete -->
	                  <div class="progress"><div class="progress-bar"></div></div>
	                  <a href="#" class="bs-wizard-dot"></a>
	                  <div class="text-center bs-wizard-info">Select Activities</div>
	                </div>
	                
	                <div class="assign_activities_progress_bar col-xs-3 bs-wizard-step disabled"><!-- disabled -->
						<div class="progress"><div class="progress-bar"></div></div>
						<a href="#" class="bs-wizard-dot"></a>
						<div class="text-center bs-wizard-info">Assign Activities</div>
	                </div>
	                
	                
	            </div>
			</section>
		</div>


		<!-- ==========================================================================
			   Create a new unit
			========================================================================== -->

		<div class="container lesson_planner_main">

			<section class="section-content-wrapper">

			<div class="col-xs-12 col-md-9 col-sm-9 col-xl-9 no-pl">
				<h3 class="section-header">Name the New Unit</h3>
			</div>	

				<div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 no-pl no-pr">

					<div class="how-we-grade">
						<p class="title title-not-started">
							<a href="#">What's a Unit?</a>
							<a href=""><i class="fa fa-long-arrow-right"></i></a>
						</p> <!-- //.how-we-grade -->
					</div>

				</div> <!-- //.col-xs-3 -->

				<input id="unit_name" type="text" placeholder="e.g. Learning How to Use Nouns">
			</section>


			<section>
				<h3 class="section-header">Select Activities</h3>

				<input id="search_activities_input" type="text" placeholder="Select Activities">
				<button id="search_activities_button" class="button-gray">Search</button>

				<div class="row activity-page-dropdown-wrapper">

					<div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">


						<%- @filters.each do |filter| %>
							<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-xl-4 no-pl">
								<div id=<%="filter_#{filter[:type]}"%> class="button-select">
									<button data-filter-type=<%=filter[:type]%>  type="button" class="select-mixin select-gray button-select button-select-wrapper" data-toggle="dropdown">
									<%= "Filter by #{filter[:alias]}"%>
									<i class="fa fa-caret-down"></i>
									</button>

									<ul class="dropdown-menu" role="menu">
										<li>
											<span class='filter_option all' data-filter-type=<%=filter[:type]%> data-model-id=''>
												<%= "All #{filter[:alias]}s" %>
											</span>
										</li>
									</ul>
								</div>
							</div>
						<% end %>



					</div>	

				</div>

				<table id="activities_table" class="table">

					<thead>
						<tr>
							<th>
								<%= image_tag 'scorebook/icon-check.png' %>
							</th>
							<th id='activity_classification' class='sorter'>App<i class="fa fa-caret-up"></i></th>
							<th id='activity' class='sorter'>Activity<i class="fa fa-caret-up"></i></th>
							<th id='section' class='sorter'>Standard Level<i class="fa fa-caret-up"></i></th>
							<th id='topic' class='sorter active'>Concept<i class="fa fa-caret-up"></i></th>
						</tr>
					</thead>
					<tbody>
					</tbody>

				</table>


				<div class="fake-border"></div>

				<ul class="pagination">
					<li class='left_arrow'><span><i class="fa fa-caret-left"></i></li>
					<li class='right_arrow'><span><i class="fa fa-caret-right"></i></li>
				</ul>
			
			</section>

			<section class="teaching-cart">
				<h3 class="section-header unit_name"></h3>
				<table class="table">
					<tbody>
						
					</tbody>
				</table>
				<div class="fake-border"></div>
				<button class="button-green pull-right" id='continue'>Continue</button>

			</section>
			
		</div> <!-- //.container -->
		<%= form_for Unit.new(), url: '/teachers/units' do |f| %>
		<% end %>
			

	</div> <!-- //.tab-pane-active -->			


</div> <!-- //#page-content-wrapper -->

